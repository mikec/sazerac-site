$header-height = 35px

#header
    background-color #fff
    height: $heading-inner-height
    padding $heading-padding-vertical 60px
    position relative
    z-index 2
    #share-links
        li.share-text
            margin-left: 50px;

body.docs
    #header
        position fixed
        width 100%
        top 0
    .links-list
        display inline-block
    .title
        display inline-block

#logo 
    width: 20px;
    top: 2px;
    position: relative;
    padding-right: 5px;
    opacity: .5;

#header-right
    position fixed
    right: 60px
    top $heading-padding-vertical

.nav
    list-style-type none
    margin 0
    padding 0
    top $heading-padding-vertical
    height $header-height
    line-height $header-height
    .break
        display none
    li
        display inline-block
        position relative
        margin 0 .6em

.links-list
    list-style-type none
    margin 0
    padding 0
    height $header-height
    line-height $header-height
    .break
        display none
    li
        display inline-block
        position relative
        margin 0 .6em

#share-links
    li.share-text
        margin-right: 10px;

.nav-link
    padding-bottom 3px
    &:hover, &.current
        border-bottom 3px solid $primary

.search-query
    height 30px
    line-height 30px
    box-sizing border-box
    padding 0 15px 0 30px
    border 1px solid #e3e3e3
    color $dark
    outline none
    border-radius 15px
    margin-right 10px
    transition border-color .2s ease
    background #fff url(/images/search.png) 8px 5px no-repeat
    background-size 20px
    vertical-align middle !important
    &:focus
        border-color $primary

#project_name
    display inline-block
    font-size 1.5em
    line-height $header-height - 5px
    height: $header-height;
    color $dark
    font-family $logo-font
    font-weight 500
    img
        vertical-align middle
        margin-right 6px
        width $header-height
        height $header-height

#version
    margin-left: 5px
    opacity: .6

#mobile-bar
    position fixed
    top 0
    left 0
    width 100%
    height 40px
    background-color #fff
    z-index 9
    display none
    box-shadow 0 0 2px rgba(0,0,0,.25)
    .menu-button
        position absolute
        width 24px
        height 24px
        top 8px
        left 12px
        background url(../images/menu.png) center center no-repeat
        background-size 24px
    .title
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        height: $header-height + 5px;
        line-height: $header-height + 10px;
